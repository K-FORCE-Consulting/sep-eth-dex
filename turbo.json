{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    
    "build:rollup": {
      "dependsOn": ["^build:rollup"],
      "outputs": ["dist/**"]
    },

    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:list": {
      "outputs": ["list/**"]
    },
    "integration-test": {
      "outputs": [],
      "inputs": ["cypress/integration/**.test.ts"]
    }
  }
}